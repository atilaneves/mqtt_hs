category:            Network
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

executable mqtt_hs
   main-is: main.hs
  -- other-modules:
  -- other-extensions:
  hs-source-dirs:      src
  default-language:    Haskell2010
  build-depends:       base >=4.7 && <4.8
                       , binary
                       , bytestring

Test-suite test-mqtt
  type: exitcode-stdio-1.0
  hs-source-dirs: tests, Mqtt/Message
  main-is: ut.hs
  build-depends: base
                 , HUnit
                 , test-framework
                 , test-framework-hunit
                 , bytestring
